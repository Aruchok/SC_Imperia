@model SC_Imperia.Models.Client

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h2>Edit</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal center">
            <h4>Client</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                <label for="fname" class="control-label col-md-2">First name</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fname, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="lname" class="control-label col-md-2">Last name</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.lname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.lname, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="Phone" class="control-label col-md-2">Phone</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="Sub" class="control-label col-md-2">Type sub</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.type_subID, ViewBag.Sub as SelectList, new { size = "1", style = "width: 400px; height: 30px" })
                    @Html.ValidationMessageFor(model => model.type_subID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="Hall" class="control-label col-md-2">Type sporst hall</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.type_sports_hallID, ViewBag.Hall as SelectList, new { size = "1", style = "width: 400px; height: 30px" })
                    @Html.ValidationMessageFor(model => model.type_sports_hallID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="Staff" class="control-label col-md-2">Last name staff</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.senior_staffID, ViewBag.Staff as SelectList, new { size = "1", style = "width: 400px; height: 30px" })
                    @Html.ValidationMessageFor(model => model.senior_staffID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="image" name="image" src="~/Content/Save.png" width="32" />
                </div>
            </div>
        </div>
    }
</div>

<div>
    <a href="@Url.Action("","Client")">
        <img src="@Url.Content("~/Content/Back.png")" alt="Home" />
    </a>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
