@model SC_Imperia.Models.Senior_staff

@{
    ViewBag.Title = "Create_SS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Senior staff</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="fname" class="control-label col-md-2">First name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.fname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="fname" class="control-label col-md-2">Last name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.lname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.lname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="fname" class="control-label col-md-2">Position</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.positionID, ViewBag.Pos as SelectList, new { size = "1", style = "width: 400px; height: 30px" })
                @Html.ValidationMessageFor(model => model.positionID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="image" name="image" src="~/Content/Save.png" width="32" />
            </div>
        </div>
    </div>
}

    <a href="@Url.Action("","Home")">
        <img src="@Url.Content("~/Content/Back.png")" alt="Home" />
    </a>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

