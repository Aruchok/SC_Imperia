@model IEnumerable<SC_Imperia.Models.Senior_staff>

@{
    ViewBag.Title = "Senior staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .center {
        width: 100px; /* Ширина элемента в пикселах */
        padding: 10px; /* Поля вокруг текста */
        margin: auto; /* Выравниваем по центру */
    }
</style>

<h2 align="center">Senior staff</h2>

<table align="center" class="table-bordered table-striped table-condensed">
    <tr>
        <th>
            @Html.Label("First Name")
        </th>
        <th>
            @Html.Label("Last Name")
        </th>
        <th>
            @Html.Label("Position")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.pos)
            </td>
            <td>
                <a href="@Url.Action("Edit_SS", "Home", new { id = item.ID })">
                    <img src="@Url.Content("~/Content/Edit.png")" />
                </a>
                <a href="@Url.Action("Details_SS", "Home", new { id = item.ID })">
                    <img src="@Url.Content("~/Content/Details.png")" />
                </a>
                <a href="@Url.Action("Delete_SS", "Home", new { id = item.ID })">
                    <img src="@Url.Content("~/Content/Delete.png")" />
                </a>
            </td>
        </tr>
    }
</table>

<div class="center">
    <a href="@Url.Action("Create_SS", "Home")">
        <img src="@Url.Content("~/Content/New.png")" />
    </a>
</div>