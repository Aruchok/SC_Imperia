@model SC_Imperia.Models.Sports_equipment

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Sports equipment</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label for="Quantity" class="control-label col-md-2">Quantity</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.quantity, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="Title" class="control-label col-md-2">Title</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label for="Staff" class="control-label col-md-2">Last name staff</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.senior_staffID, ViewBag.Staff as SelectList, new { size = "1", style = "width: 400px; height: 30px" })
            @Html.ValidationMessageFor(model => model.senior_staffID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="image" name="image" src="~/Content/Save.png" width="32" />
        </div>
    </div>
</div>
}

<div>
    <a href="@Url.Action("","SE")">
        <img src="@Url.Content("~/Content/Back.png")" alt="Home" />
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

